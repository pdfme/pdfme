{
  "name": "@pdfme/converter",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "author": "hand-dot",
  "license": "MIT",
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-designer",
    "pdf-viewer",
    "typescript",
    "react"
  ],
  "description": "TypeScript base PDF generator and React base UI. Open source, developed by the community, and completely free to use under the MIT license!",
  "homepage": "https://pdfme.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:pdfme/pdfme.git"
  },
  "bugs": {
    "url": "https://github.com/pdfme/pdfme/issues"
  },
  "main": "dist/esm/src/index.browser.js",
  "module": "dist/esm/src/index.browser.js",
  "types": "dist/types/src/index.node.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/esm/src/index.browser.js",
      "node": "./dist/esm/src/index.node.js",
      "default": "./dist/esm/src/index.browser.js",
      "types": "./dist/types/src/index.node.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc -p tsconfig.esm.json -w",
    "build": "npm-run-all --parallel build:esm build:node",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:node": "tsc -p tsconfig.node.json",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src --config eslint.config.mjs",
    "test": "node --experimental-vm-modules ../../node_modules/.bin/jest --config jest.config.mjs",
    "prune": "ts-prune src",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@pdfme/common": "*",
    "@pdfme/pdf-lib": "*",
    "pdfjs-dist": "^5.2.133"
  },
  "devDependencies": {
    "@pdfme/generator": "*",
    "@types/estree": "^1.0.6",
    "canvas": "^2.11.2"
  },
  "optionalDependencies": {
    "canvas": "^2.11.0"
  },
  "jest": {
    "resolver": "ts-jest-resolver",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.esm.json",
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^@pdfme/common$": "<rootDir>/../common/src/index.ts",
      "^@pdfme/generator$": "<rootDir>/../generator/src/index.ts"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "extensionsToTreatAsEsm": [".ts"]
  },
  "publishConfig": {
    "access": "public"
  }
}
