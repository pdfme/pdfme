{
  "name": "@pdfme/manipulator",
  "version": "0.0.0",
  "sideEffects": false,
  "author": "hand-dot",
  "license": "MIT",
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-designer",
    "pdf-viewer",
    "typescript",
    "react"
  ],
  "description": "TypeScript base PDF generator and React base UI. Open source, developed by the community, and completely free to use under the MIT license!",
  "homepage": "https://pdfme.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:pdfme/pdfme.git"
  },
  "bugs": {
    "url": "https://github.com/pdfme/pdfme/issues"
  },
  "type": "module",
  "main": "dist/esm/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "types": "./dist/types/src/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc -p tsconfig.esm.json -w",
    "build": "tsc -p tsconfig.esm.json",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src --config eslint.config.mjs",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:update-snapshots": "node --experimental-vm-modules node_modules/.bin/jest --updateSnapshot",
    "prune": "ts-prune src",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@pdfme/pdf-lib": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@pdfme/converter": "*",
    "@types/estree": "^1.0.6"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json",
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/(?:src|__tests__)/.*)\\.js$": "$1.ts"
    }
  }
}
