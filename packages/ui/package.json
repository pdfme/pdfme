{
  "name": "@pdfme/ui",
  "version": "0.0.0",
  "sideEffects": false,
  "author": "hand-dot",
  "license": "MIT",
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-designer",
    "pdf-viewer",
    "typescript",
    "react"
  ],
  "description": "TypeScript base PDF generator and React base UI. Open source, developed by the community, and completely free to use under the MIT license!",
  "homepage": "https://pdfme.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:pdfme/pdfme.git"
  },
  "bugs": {
    "url": "https://github.com/pdfme/pdfme/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/types/src/index.d.ts",
  "scripts": {
    "dev": "npm-run-all --parallel devBuild:watch devBuildType:watch",
    "devBuild:watch": "esbuild src/index.ts --bundle --outfile=dist/index.es.js --format=esm --watch",
    "devBuildType:watch": "tsc --emitDeclarationOnly --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts,.tsx src --config eslint.config.mjs",
    "test": "jest",
    "prune": "ts-prune src",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^10.0.0",
    "@pdfme/converter": "*",
    "@scena/react-guides": "^0.28.2",
    "antd": "^5.25.0",
    "form-render": "^2.2.16",
    "globrex": "^0.1.2",
    "hotkeys-js": "^3.8.7",
    "lucide-react": "^0.507.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-moveable": "^0.56.0",
    "react-refresh": "^0.17.0",
    "react-selecto": "^1.12.0"
  },
  "devDependencies": {
    "@pdfme/common": "*",
    "@pdfme/schemas": "*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "@ungap/structured-clone": "^1.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "csstype": "^3.1.2",
    "esbuild": "^0.25.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "is-path-inside": "^4.0.0",
    "jest-canvas-mock": "^2.3.1",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "process": "^0.11.10",
    "rollup": "^4.40.1",
    "vite": "^6.3.5",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "@pdfme/common": "latest",
    "@pdfme/schemas": "latest"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupFilesAfterEnv": [
      "./__tests__/test-helpers.js"
    ],
    "moduleNameMapper": {
      "\\.(png|css)$": "<rootDir>/__mocks__/assetsTransformer.js",
      "^@pdfme/converter$": "<rootDir>/../converter/src/index.node.ts",
      "^@pdfme/schemas/utils$": "<rootDir>/../schemas/src/utils.ts",
      "^antd/es/": "antd/lib/",
      "^form-render/es/": "form-render/lib/",
      "^rc-picker/es/": "rc-picker/lib/",
      "^lodash-es$": "lodash",
      "\\^lucide-react$": "<rootDir>/__mocks__/lucide-react.js"
    },
    "resolver": "ts-jest-resolver",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!lucide-react)"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
