{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2020",
    "jsx": "react",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "NodeNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": [
      "node",
      "jest",
      "@types/jest"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@pdfme/common": [
        "packages/common/dist/esm/src"
      ],
      "@pdfme/schemas": [
        "packages/schemas/dist/esm/src"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
