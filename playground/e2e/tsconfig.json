{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "../../node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.json"],
  "exclude": ["node_modules"]
}
