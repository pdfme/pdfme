{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": [
      "node",
      "jest",
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true
  },
}
